<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaymentPaid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_green_medium</item>
        <item name="colorPrimaryVariant">@color/material_dark_green_dark</item>
        <item name="colorOnPrimary">@color/material_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_orange_light</item>
        <item name="colorSecondaryVariant">@color/material_orange_light</item>
        <item name="colorOnSecondary">@color/material_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <!-- Change status bar text color when status bar color is white -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- for menu item in nav drawer -->
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/material_white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>

    <style name="CustomCardView" parent="CardView.Light">
        <!-- for the list item tiles in the work, payment activity lists-->
        <item name="background">@color/material_dark_green_dark</item>
        <item name="android:textColor">@color/material_black</item>
        <item name="backgroundColor">@color/material_dark_green_dark</item>
        <item name="cardBackgroundColor">@color/material_dark_green_dark</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter</item>
        <item name="android:activityOpenExitAnimation">@anim/exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/pop_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/pop_exit</item>
    </style>


    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="backgroundColor">@color/brand_green</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

</resources>