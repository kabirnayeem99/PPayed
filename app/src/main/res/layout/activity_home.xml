                android:id="@+id/tab_item_works"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/tab_item_works" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_item_payments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_item_payments" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_item_exports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_item_exports" />

        </com.google.android.material.tabs.TabLayout>

    </androidx.viewpager.widget.ViewPager>

