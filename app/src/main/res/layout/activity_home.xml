<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.HomeActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_view_pager_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_tab_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/ti_work_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/label_tab_item_works" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/ti_payments_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_tab_item_payments" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/ti_export_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_tab_item_exports" />

        </com.google.android.material.tabs.TabLayout>

    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>