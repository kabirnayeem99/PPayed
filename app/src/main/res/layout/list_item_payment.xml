<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_margin="12dp"
    android:background="@color/material_dark_green_dark"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_payment_month_list_item_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="14dp"
        android:text="@string/text_sample_month_year_name"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_payment_amount_list_item_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="14dp"
        android:text="@string/text_sample_money_amount"
        android:textStyle="bold" />

</RelativeLayout>