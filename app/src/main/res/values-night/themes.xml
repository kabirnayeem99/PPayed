<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaymentPaid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomCardView" parent="CardView.Dark">
        <!-- for the list item tiles in the work, payment activity lists-->
        <item name="backgroundTint">@color/green_700</item>
        <item name="background">@color/green_700</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/green_700</item>
        <item name="cardBackgroundColor">@color/green_700</item>
    </style>
</resources>