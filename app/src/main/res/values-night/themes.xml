<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaymentPaid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dark_green_dark</item>
        <item name="colorPrimaryVariant">@color/material_dark_green_dark</item>
        <item name="colorOnPrimary">@color/material_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_orange_light</item>
        <item name="colorSecondaryVariant">@color/material_orange_light</item>
        <item name="colorOnSecondary">@color/material_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomCardView" parent="CardView.Dark">
        <!-- for the list item tiles in the work, payment activity lists-->
        <item name="backgroundTint">@color/material_dark_green_dark</item>
        <item name="background">@color/material_dark_green_dark</item>
        <item name="android:textColor">@color/material_black</item>
        <item name="backgroundColor">@color/material_dark_green_dark</item>
        <item name="cardBackgroundColor">@color/material_dark_green_dark</item>
    </style>
</resources>